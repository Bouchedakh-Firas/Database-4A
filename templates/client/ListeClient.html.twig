{% extends 'base.html.twig' %}

{% block title %}Client Liste
{% endblock %}

{% block body %}
    <br>
    <a type="button"  class="btn "  href="{{ path('create_client') }}">Ajouter</a>
    <br>
    <table class="table table-hover">
    <thead>
    <tr class="table-dark">
        <th scope="col">nom</th>
        <th scope="col">prenom</th>
        <th scope="col"></th>
        <th scope="col"></th>
        <th scope="col"></th>
    </tr>
    </thead>
    <tbody>
    {% for client in clients %}
        <tr scope="row">
            <td>{{ client.nom }}</td>
            <td>{{ client.prenom }}</td>
            <td> <a class="btn btn-warning"   href="{{ path('client_id', {'id': client.idclient}) }}" /> Consulter</td>
            <td> <a class="btn btn-info"   href="{{ path('client_id', {'id': client.idclient}) }}" /> Modifier</td>
            <td> <a class="btn btn-danger"  href="{{ path('remove_client', {'id': client.idclient}) }}" /> Supprimer</td>

        </tr>
    {% endfor %}
        </tbody>
        </table>



{% endblock %}
